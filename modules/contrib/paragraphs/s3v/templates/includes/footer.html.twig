<footer aria-label="Site footer" class="footer clearfix" id="footer" role="contentinfo">
	{% if page.footer_top %}
		<div class="footer--top clearfix">
			{{ page.footer_top }}
		</div>
	{% endif %}

	{% if page.footer_bottom %}
		<div class="footer--bottom clearfix">
			{{ page.footer_bottom }}
		</div>
	{% endif %}

	<div class="footer-copyright">
		<div class="container">
			<div class="row">
				<div class="col-xs-12">
					<div class="copyright">
						<p>{{ s3v.footer_copyright_text }}</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</footer>
